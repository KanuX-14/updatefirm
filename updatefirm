wait="sleep 0.7"
function updateF(){
     git clone https://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git
     mkdir -p $HOME/Firmware_Backup
     sudo cp -r /lib/firmware/* $HOME/Firmware_Backup/ && $wait &&  sudo rm -R /lib/firmware/* && $wait && sudo cp -r $HOME/linux-firmware/* /lib/firmware/ && $wait && rm -R -f $HOME/linux-firmware && sudo update-initramfs -u
     echo "Do you want to reboot? (Y/n)" && read input
     case $input in
          Y|y) sudo reboot
          ;;
          N|n) exit
          ;;
          *) sudo reboot
     esac
}
function backupF(){
     sudo cp -r $HOME/Firmware_Backup/* /lib/firmware/ && $wait && rm -R $HOME/Firmware_Backup
     echo "Do you want to reboot? (Y/n)" && read input
     case $input in
          Y|y) sudo reboot
          ;;
          N|n) exit
          ;;
          *) sudo reboot
     esac
}
function helpF(){
     echo "
  [INFORMATION]
  
    This script updates your firmware, based in GIT parameters.
    
  [USAGE]
    
    -h: prints this option
    -v: prints the version of the script
    -U: updates the firmware and creates a backup for a old one
    -B: backups the firmware
    
  [CAUTION]
    
    Don't use (-U) and (-B) flags in the same line!
     "
}
function versionF(){
     echo "  updatefirm 1.1 - KanuX-14 | 06/06/2020 ~ 1:51 AM"
}
while getopts ":hvUB" opt; do
     case $opt in
          h) helpF
          ;;
          v) versionF
          ;;
          U) updateF
          ;;
          B) backupF
          ;;
          *) echo "This option don't stand up here!"
          ;;
     esac
done
